<h2>
  <%= link_to l(:label_appli_plural), applis_path %> 
  &#187; <%= link_to @appli.name, appli_path(@project,@appli) %>
  &#187; <%= h @instance.name %>
</h2>

<%= labelled_form_for :instance, @instance, :url => appli_instance_path(@project,@appli,@instance),
                             :html => { :class => nil, :method => :put } do |f| %>
	<%= render :partial => 'form', :locals => { :f => f } %>
	<p><%= submit_tag l(:button_update) %></p>
<% end %>
